<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MockerProject.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MockerProject.Views.EditControl"
             x:CompileBindings="True" x:DataType="vm:UIControlViewModel">
    <!--<TextBox Name="edit" IsReadOnly="True" PointerPressed="onMousePressed" PointerReleased="onMouseReleased" Text="Edit"></TextBox>-->
    <TextBox Name="edit" 
             Text="{Binding text}"
             ToolTip.Tip="{Binding Control_Tip}"
             Opacity="{Binding opacity}"
             IsEnabled="{Binding isEnabled}"
             Width="{Binding width}"
             MinHeight="10"
             Background="{Binding background}"
             Foreground="{Binding foreground}"
             BorderBrush="{Binding borderColor}"
             BorderThickness="{Binding borderThickness}"
             CornerRadius="{Binding borderRound}"
             FontSize="{Binding fontSize}"
             FontWeight="{Binding fontWeight}"
             FontStyle="{Binding fontStyle}"
             FontFamily="{Binding fontFamily}"
             FontStretch="Expanded"/>
    <!--<Border Name="edit" Background="{Binding background}"
            BorderBrush="{Binding borderColor}"
            BorderThickness="1"
            CornerRadius="{Binding borderRound}"
            PointerPressed="onMousePressed"
            PointerReleased="onMouseReleased"
            Opacity="{Binding opacity}"
